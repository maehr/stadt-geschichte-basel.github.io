{
	"name": "stadt-geschichte-basel.github.io",
	"description": "Dokumentation der Arbeit des Teams f√ºr Forschungsdatenmanagement und digitale Vermittlung von Stadt.Geschichte.Basel.",
	"author": "Stadt.Geschichte.Basel <info@stadtgeschichtebasel.ch>",
	"url": "https://github.com/Stadt-Geschichte-Basel/stadt-geschichte-basel.github.io/issues",
	"license": "AGPL-3.0",
	"scripts": {
		"check": "prettier --ignore-path .gitignore  --check . '!{CODE_OF_CONDUCT.md,LICENSE-AGPL.md,LICENSE-CCBY.md,_layouts/default.html,package-lock.json,pnpm-lock.yaml,yarn.lock}'",
		"commit": "cz",
		"format": "prettier --ignore-path .gitignore --write . '!{CODE_OF_CONDUCT.md,LICENSE-AGPL.md,LICENSE-CCBY.md,_layouts/default.html,package-lock.json,pnpm-lock.yaml,yarn.lock}'",
		"prepare": "husky",
		"changelog": "npm exec git-cliff -- --config cliff.toml"
	},
	"devDependencies": {
		"commitizen": "^4.3.1",
		"cz": "^1.8.2",
		"cz-conventional-changelog": "^3.3.0",
		"git-cliff": "^2.8.0",
		"husky": "^9.1.7",
		"prettier": "^3.5.2"
	},
	"type": "module",
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
